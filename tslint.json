{
	"extends": "tslint:recommended",
	"rules": {
		"max-line-length": {
			"options": [100]
		},
		"indent": [true, "tabs"],
		"new-parens": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": false,
		"no-consecutive-blank-lines": true,
		"no-shadowed-variable": true,
		"no-console": {
			"severity": "warning",
			"options": ["debug", "info", "log", "time", "timeEnd", "trace"]
		},
		"prefer-for-of": false,
		"no-magic-numbers": [false],
		"no-var-keyword": true,
		"triple-equals": true,
		"prefer-const": true,
		"semicolon": [true, "always"],
		"no-empty": false
	},
	"jsRules": {
		"max-line-length": {
			"options": [100]
		}
	}
}
